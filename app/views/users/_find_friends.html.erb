<section class="section"> 
  <div class="container">
    <div class="content">
      <h1>Find Friends</h1>
      <% @users.each do |user| %>
        <% unless 
            user == current_user || 
            current_user.friends.include?(user) || 
            current_user.requested_friends.include?(user) || 
            current_user.requesting_friends.include?(user) %>
          <div class="level">
            <!-- Left side -->
            <div class="level-left">
              <div class="level-item">
                <%= image_tag("default_avatar.png", size: "40x80") %>
              </div>
              <div class="level-item">
                <p><strong><%= user.username %></strong></p>
              </div>
            </div>

            <!-- Right side -->
            <div class="level-right">
              <p class="level-item">
                <%= link_to "Invite", requests_path(:invitee => user.id), :method => :post, class: "button is-success" %>
              </p>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</section>

<p class="subtitle">Sent Friend Requests</p>
  <% current_user.requested_friends.each do |requestee| %>
      <div class="level">
        <!-- Left side -->
        <div class="level-left">
          <div class="level-item">
            <%= image_tag("default_avatar.png", size: "40x80") %>
          </div>
          <div class="level-item">
            <p><strong><%= requestee.username %></strong></p>
          </div>
        </div>

        <!-- Right side -->
        <div class="level-right">
          <p class="level-item">
            <%= link_to "Cancel", root_path, class: "button is-warning" %>
          </p>
        </div>
      </div>
  <% end %>
<p class="subtitle">Received</p>
  <% current_user.requesting_friends.each do |requestor| %>
      <div class="level">
        <!-- Left side -->
        <div class="level-left">
          <div class="level-item">
            <%= image_tag("default_avatar.png", size: "40x80") %>
          </div>
          <div class="level-item">
            <p><strong><%= requestor.username %></strong></p>
          </div>
        </div>

        <!-- Right side -->
        <div class="level-right">
          <p class="level-item">
            <%= link_to "Accept", root_path, class: "button is-success" %>
          </p>
        </div>
      </div>
  <% end %>

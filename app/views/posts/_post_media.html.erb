<div class="container">
  <div class="content">
    <% @posts.each do |post| %>
      <div class="box">
        <article class="media">
          <figure class="media-left">
            <p class="image is-64x64">
              <img src="/image/logo.png">
            </p>
          </figure>
          <div class="media-content">
            <div class="content">
              <p>
                <strong><%= post.title %></strong> <small>@<%= post.user.username %></small> <small>31m</small>
                <br>
                <%= post.body %>
              </p>
            </div>
            <nav class="level is-mobile">
              <div class="level-left">
                <a class="level-item">
                  link to reply
                </a>
                <a class="level-item">
                  link to like
                </a>
              </div>
            </nav>
          </div>
        </article>
      </div>
    <% end %>
  </div>
</div>
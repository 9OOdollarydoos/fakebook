<article class="media">
  <figure class="media-left">
    <p id="display-pic" class="image is-64x64">
      DR
      <!--<img class="is-rounded" src="icon">-->
    </p>
  </figure>
  <div class="media-content">
    <%= form_for @post do |f| %>
      <div class="field">
        <div class="control">
          <%= f.text_field :title, autofocus: true, placeholder: "New post title", class: "input" %>
        </div>
      </div>
      <div class="field">
        <div class="control">
          <%= f.text_area :body, autofocus: true, placeholder: "New post content...", class: "textarea" %>
        </div>
      </div>
      <nav class="level">
        <div class="level-left">
          <div class="level-item">
            <%= f.submit "Submit", class: "button is-link" %> 
          </div>
        </div>
      </nav>
    <% end %>
  </div>
</article>